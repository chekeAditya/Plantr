+        super.onViewCreated(view, savedInstanceState)
+
+        setRecyclerView()
+
+    }
+
+    private fun setRecyclerView() {
+        fragmentSwapBinding.swapRecyclerView.apply {
+            adapter = SwapAdapter()
+            layoutManager = GridLayoutManager(context,2)
+        }
+    }
+
