<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/isSelected" android:left="32dp" android:right="32dp" android:state_checked="true" android:top="32dp">
        <shape android:shape="line">
            <stroke android:width="6dp" android:height="2dp" android:color="@color/isSelected" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:color="@color/isNotSelected" android:state_checked="false" />
</selector>