<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_16"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/light_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"/>

        <TextView
            android:id="@+id/tvYoucanTry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_toEndOf="@+id/ivInfo"
            android:text="You can try out 1 Free chat session with expert of your choice for 3 mins."
            android:textColor="@color/BNWBlack"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/DoYouWish"
            style="@style/TopHeading"
            android:layout_below="@+id/tvYoucanTry"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_toEndOf="@+id/ivInfo"
            android:text="Do you wish to begin your FREE session with this Expert?"
            android:textColor="@color/BNWBlack"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_below="@+id/DoYouWish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnExit"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXIT"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:textColor="@color/BNWBlack"
                android:textSize="@dimen/sp_18"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnStart"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/rectangle_green_bg"/>

        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>